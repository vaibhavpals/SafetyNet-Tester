<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vpals.apps.safetynettestapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="CHECK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheck"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:text="SafetyNet Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/txtTitle"
        android:textSize="40sp" />

    <TextView
        android:text="CTS Profile Match : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtTitle"
        android:layout_alignStart="@+id/txtTitle"
        android:id="@+id/txtCtsProfileMatch" />

    <TextView
        android:text="Response Signature Valid : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCtsProfileMatch"
        android:layout_alignLeft="@+id/txtCtsProfileMatch"
        android:layout_alignStart="@+id/txtCtsProfileMatch"
        android:layout_marginTop="53dp"
        android:id="@+id/txtResponseValidationStatus" />

    <TextView
        android:text="SafetyNet Call Success :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/txtSafetyNetCallStatus"
        android:layout_below="@+id/txtResponseValidationStatus"
        android:layout_alignLeft="@+id/txtResponseValidationStatus"
        android:layout_alignStart="@+id/txtResponseValidationStatus" />

</RelativeLayout>
